<h2>Meeting</h2>

<div class="whiteboard row">
  <div class="happy col">
    <p class="text-center"><h2>:)</h2></p>
    <ul class="list-inline">
      {{#each model.happyActiveWhiteboardItems as |whiteboardItem| }}
        {{whiteboard-item item=whiteboardItem }}
      {{/each}}
    </ul>

    <form>
      {{input value=newHappyWhiteboardItem type="text" placeholder="I'm glad that..." }}
      <button {{ action 'createHappyWhiteboardItem' model }}/>
    </form>
  </div>

  <div class="meh col">
    <p class="text-center"><h2>:|</h2></p>
    <ul class="list-inline">
      {{#each model.mehActiveWhiteboardItems as |whiteboardItem| }}
        {{whiteboard-item item=whiteboardItem }}
      {{/each}}
    </ul>

    <form>
      {{input value=newMehWhiteboardItem type="text" placeholder="I'm wondering about..."}}
      <button {{ action 'createMehWhiteboardItem' model }}/>
    </form>
  </div>

  <div class="sad col">
    <p class="text-center"><h2>:(</h2></p>
    <ul class="list-inline">
      {{#each model.sadActiveWhiteboardItems as |whiteboardItem| }}
        {{whiteboard-item item=whiteboardItem }}
      {{/each}}
    </ul>

    <form>
      {{input value=newSadWhiteboardItem type="text" placeholder="It wasn't so great that..."}}
      <button {{ action 'createSadWhiteboardItem' model }}/>
    </form>
  </div>
</div>

<ul class="list-inline">
  {{#each model.actionItems as |actionItem| }}
    {{ action-item actionItem=actionItem }}
  {{/each}}
</ul>

<form>
  {{input value=newActionItem type="text" placeholder="Add an action item"}}
  <button {{ action 'createActionItem' model }}/>
</form>
--


